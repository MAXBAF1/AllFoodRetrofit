<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_last_food_container"
    android:paddingRight="@dimen/margin_last_food_container"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="@dimen/image_last_food_size"
        android:layout_height="@dimen/image_last_food_size"
        android:layout_marginEnd="@dimen/margin_for_last_food"
        android:layout_weight="0"/>

</LinearLayout>
